{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx":"react",
    "module": "commonjs",
    "moduleResolution": "classic",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./bin",
    "removeComments": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "!./node_modules/**/*.d.ts"
  ]
}
